{

  "express": {
    "view cache": false,
    "view engine": "dust",
    "views": "path:./templates"
  },

  "i18n": {
    "contentPath": "path:../locales",
    "fallback": "en-US"
  },

  "view engines": {
    "dust": {
      "module": "engine-munger",
      "renderer": {
        "method": "dust",
        "arguments": [
          {
            "cache": false
          },
          {
            "views": "config:express.views",
            "view engine": "config:express.view engine",
            "i18n": "config:i18n"
          }
        ]
      }
    }
  },

  "middleware": {
    "static": {
      "module": {
        "name": "serve-static",
        "arguments": [
          ".build",
          {}
        ]
      }
    },

    "swaggerize": {
      "module": {
        "name": "swaggerize-express",
        "arguments": [
          {
            "api": "../../../server/api.json",
            "handlers": "../../../../server/routes/api"
          }
        ]
      },
      "priority": 210
    },

    "ngXSRF": {
      "enabled": true,
      "module": {
        "name": "../../../../server/middleware/ng-xsrf"
      },
      "priority": 115
    }

  },

  "CONFIG": {
    "SITE": {
      "STATIC_URL": "/static"
    },

    "API": {
      "SUNLIGHT_BASE_URL": "https://congress.api.sunlightfoundation.com",
      "POTC_BASE_URL": "https://congress-forms.fightforthefuture.org",
      "SMARTY_STREETS": {
        "AUTOCOMPLETE_URL": "https://autocomplete-api.smartystreets.com",
        "ADDRESS_URL": "https://api.smartystreets.com"
      }
    },

    "CREDENTIALS": "import:./credentials"
  }

}
